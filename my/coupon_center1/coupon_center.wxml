<wxs module="util" src="../../utils/util.wxs" />
<view hidden='{{!classify}}'>
  <view class='coupon-list'>
    <view class='item' wx:for='{{list}}' wx:key='{{index}}'>
      <view class='coupon-top' style='{{"background:url("+util.HTTP+"mobile/small/image/coupon/bg2.png) no-repeat center;background-size:100% 100%;"}}'>
        <view class='info'>
          <view class='title'>
            <text>{{item.flagName}}</text>
            <text>{{item.typeName}}</text>
          </view>
          <view class='coupon-price'>
            <view class='money'>￥</view>
            <view class='price'>{{item.actualPrice}}</view>
            <block wx:if='{{item.fullSubtractionPrice==0}}'>
              <view class='coupon-tip'>无门槛</view>
            </block>
            <block wx:else>
              <view class='coupon-tip'>满<text>{{item.fullSubtractionPrice}}</text>元可用</view>
            </block>
          </view>
        </view>
        <view class='btn'>
          <!-- <block>
          <view></view> -->
        </view>
        <view class='explain'>
          <view class='text'>使用说明</view>
          <view class='font_family icon-wd-zhye-sm'></view>
        </view>
      </view>

    </view>
  </view>

  <view class='empty-view' hidden='{{list.length != 0 || loading}}'>
    <view>
      <image src='{{util.HTTP}}mobile/small/image/kby-zwyh.png'></image>
      <view>暂无优惠券</view>
    </view>
  </view>
  <view class='footer'>
    <view>
      <view style='{{util.diyImgbox(96)}}'>
        <image src='{{util.HTTP}}mobile/small/image/sy-hqzx-da1-2.png' style='{{util.diyImgcolor(diyColor.zColor,96,96)}}transform:translateX(-58px);'></image>
      </view>
      <view style='{{util.diyColor(diyColor.zColor,"","")}}'>领券</view>
    </view>
    <view hover-class='hover-class' hover-stay-time='400' bindtap='onChangeCoupon'>
      <image src='{{util.HTTP}}mobile/small/image/sy-hqzx-da2.png'></image>
      <view>换券</view>
    </view>
  </view>
</view>