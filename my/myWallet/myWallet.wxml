<wxs module="util" src="../../utils/util.wxs" />
<view class='wrap'>
  <view class='section'>
    <view class='li' data-item='usableMoney' hover-class='hover-class' hover-stay-time='400' bindtap='route' wx:if='{{configSwitch.showSwitch.isBalance==1}}' >
      <image class='img' src='{{util.HTTP}}mobile/small/image/my/1-1.png'></image>
      <view class='title'>账户余额</view>
      <view class='num'>{{info.usableMoney}}</view>
      <image class='next' src='{{util.HTTP}}mobile/small/image/my/1-9.png'></image>
    </view>
    <view class='li' data-item='coupon' hover-class='hover-class' hover-stay-time='400' bindtap='route' wx:if='{{configSwitch.showSwitch.isCoupon==1}}' >
      <image class='img' src='{{util.HTTP}}mobile/small/image/my/1-2.png'></image>
      <view class='title'>优惠券</view>
      <view class='num'>{{info.coupon}}张</view>
      <image class='next' src='{{util.HTTP}}mobile/small/image/my/1-9.png'></image>
    </view>
    <view class='li' data-item='redPacket' hover-class='hover-class' hover-stay-time='400' bindtap='route' wx:if='{{configSwitch.showSwitch.isRedPacket==1}}' >
      <image class='img' src='{{util.HTTP}}mobile/small/image/my/1-3.png'></image>
      <view class='title'>红包</view>
      <view class='num'>{{info.redPacket}}</view>
      <image class='next' src='{{util.HTTP}}mobile/small/image/my/1-9.png'></image>
    </view>
    <view class='li' data-item='payPoints' hover-class='hover-class' hover-stay-time='400' bindtap='route' wx:if='{{configSwitch.showSwitch.isIntegralMall==1}}'>
      <image class='img' src='{{util.HTTP}}mobile/small/image/my/1-4.png'></image>
      <view class='title'>积分</view>
      <view class='num'>{{info.payPoints}}</view>
      <image class='next' src='{{util.HTTP}}mobile/small/image/my/1-9.png'></image>
    </view>
    <view class='li' data-item='accountRecharge' hover-class='hover-class' hover-stay-time='400' bindtap='route' wx:if='{{configSwitch.showSwitch.isRecharge==1}}' >
      <image class='img' src='{{util.HTTP}}mobile/small/image/my/1-5.png'></image>
      <view class='title'>账户充值</view>
      <image class='next' src='{{util.HTTP}}mobile/small/image/my/1-9.png'></image>
    </view>
    <view class='li' data-item='bank' hover-class='hover-class' hover-stay-time='400' bindtap='route' wx:if='{{configSwitch.showSwitch.isRecharge1!=1}}' >
      <image class='img' src='{{util.HTTP}}mobile/small/image/bank/bank_2.png'></image>
      <view class='title'>银行卡</view>
      <image class='next' src='{{util.HTTP}}mobile/small/image/my/1-9.png'></image>
    </view>
  </view>
</view>