
<view class='warp' hidden='{{!isShow}}' animation="{{animation}}" hover-class='hover-class' hover-stay-time='400' bindtap='_close'>
  <view class='warp-con'>
    <view class='title'>{{info.storeName}}</view>
    <view class='code-con'>
      <image class='code' src='{{info.appletCode}}'></image>
      <view class='shop-logo'>
        <image class='logo' src='{{info.logo}}'></image>
      </view>
      
    </view>
    <view class='tip'>邀请好友来扫一扫 分享店铺给TA</view>
  </view>
</view>